html,body,div,span,applet,object,iframe,h1,h2,h3,h4,h5,h6,p,blockquote,pre,a,abbr,acronym,address,big,cite,code,del,dfn,em,img,ins,kbd,q,s,samp,small,strike,strong,sub,sup,tt,var,b,u,i,center,dl,dt,dd,ol,ul,li,fieldset,form,label,legend,table,caption,tbody,tfoot,thead,tr,th,td,article,aside,canvas,details,embed,figure,figcaption,footer,header,hgroup,menu,nav,output,ruby,section,summary,time,mark,audio,video
  margin 0
  padding 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline

article,aside,details,figcaption,figure,footer,header,hgroup,menu,nav,section
  display block

body
  line-height 1
  height 100vh

ol,ul
  list-style none

blockquote,q
  quotes none

blockquote:before,blockquote:after,q:before,q:after
  content ''
  content none

table
  border-collapse collapse
  border-spacing 0

$white = rgba(204,204,204, 1)
$black = rgba(51,51,51, 1)

*
  box-sizing border-box

html
  color $white
  background-color $black
  font-family 'Roboto', sans-serif
  background linear-gradient(rgba(4,32,26,0.91), rgba(8,64,53,0.91)), url("../img/dirtbike.jpg")
  background-position center
  background-size cover
  text-shadow 3px 3px 6px rgba(0,0,0,0.4)
  overflow hidden
  -webkit-font-smoothing antialiased
  font-smoothing antialiased

.container
  margin 0 auto
  // border 1px dashed #808080
  display flex
  flex-direction column
  justify-content space-between
  height 100%

.nav
  display flex
  justify-content space-between
  div
    margin 20px
  .location
    display flex
    align-items: center;

.weather
  // border 2px dotted green
  height 100%
  display flex
  flex-direction column
  align-items center
  justify-content center
  width 100%
  max-width 600px
  margin 0 auto
  & > *
    // border 1px dotted #808080

.decision
  font-size 5em
  display inline-block
  margin 0 auto
  text-align center
  padding-bottom 64px

.weather-details
  display flex
  align-items center
  width 100%
  padding-bottom 32px

.weather-part
  // border 1px dashed #808080
  display flex
  flex-direction column
  align-items center
  flex 1 1 0

.condition-icon
  margin 0 20px

.temp,
.precip
  font-size 3em
  color $white - 60

.high-low-temp,
.condition,
.precip-label {
  color $white - 60
}

.superscript
  vertical-align super
  font-size 0.5em

.daylight,
.wind-condition
  font-size 1.4em
  margin-bottom 4px

.daylight-left,
.wind-speed
  font-size 0.8em
  color $white - 60

img
  width 100px
  // filter saturate(0%) brightness(9999%)
  opacity 0.6

.location img,
.settings img
  display inline-block
  width 24px

.footer
  text-align center
  margin-bottom 20px
  font-size 0.6em
  color $white - 60

.pref-container, .pref
  display none

.pref-container
  height 100%
  width 100%
  position absolute
  background black
  top 0
  bottom 0
  left 0
  right 0
  z-index 10
  margin auto
  opacity 0.3

.pref
  background-color $black
  height 70%
  width 70%
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  z-index 100
  margin auto

.form
  padding 36px
  height 100%
  // border 1px dashed white
  & > *
    margin 5px
  input
    margin-bottom 24px
    width 80%
